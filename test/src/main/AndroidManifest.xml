<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._4000Words">

        <activity
            android:name=".lesson.LessonActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".payment.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="content" />
                <data android:scheme="file" />
                <data android:mimeType="text/x-dsrc" />

            </intent-filter>
        </activity>

        <activity android:name=".payment.PaymentActivity" />
        <activity android:name=".picture.presenter.PictureActivity" />

    </application>

    <queries>

        <!-- Click ilovasi -->
        <package android:name="air.com.ssdsoftwaresolutions.clickuz" />

        <!-- Payme ilovasi -->
        <package android:name="uz.dida.payme" />

    </queries>

</manifest>