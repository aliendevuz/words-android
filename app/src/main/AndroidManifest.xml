<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
<!--    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />-->

    <application
        android:name=".App"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_words"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_words_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Words"
        tools:targetApi="31">

        <activity
            android:name=".presentation.features.home.HomeActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.App.SplashScreen"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="app"
                    android:host="4000.uz"
                    android:pathPrefix="/" />
            </intent-filter>

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="4000.uz"
                    android:pathPrefix="/" />
            </intent-filter>

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"
                    android:host="4000.uz"
                    android:pathPrefix="/" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:scheme="content"/>
                <data android:scheme="file"/>
                <data android:mimeType="text/x-dsrc"/>
            </intent-filter>

        </activity>

        <activity android:name=".presentation.features.welcome.WelcomeActivity" />
        <activity android:name=".presentation.features.pick.PickActivity" />
        <activity android:name=".presentation.features.select.SelectActivity" />
        <activity android:name=".presentation.features.lesson.LessonActivity" />
        <activity android:name=".presentation.features.quiz.QuizActivity" />
        <activity android:name=".presentation.features.result.ResultActivity" />
        <activity android:name=".presentation.features.story.StoryActivity" />
        <activity android:name=".presentation.features.setting.SettingActivity" />
        <activity android:name=".presentation.features.about.AboutActivity" />
        <activity android:name=".presentation.features.more.MoreActivity" />
        <activity android:name=".presentation.features.statistics.StatisticsActivity" />

        <service android:name=".infrastructure.service.MyFirebaseInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_words_notification" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7031957988362944~6054415021"/>

<!--        <property-->
<!--            android:name="android.adservices.AD_SERVICES_CONFIG"-->
<!--            android:resource="@xml/gma_ad_services_config"-->
<!--            tools:replace="android:resource" />-->

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="uz.alien.dictup.initializer.AppInitializerImpl"
                android:value="androidx.startup" />
        </provider>

    </application>

</manifest>